{
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "dist" }
		},
		{
			"src": "api/*.js",
			"use": "@vercel/node"
		}
	],

	"functions": {
		"api/*.js": {
			"maxDuration": 30
		}
	},

	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/api/index.js"
		},
		{
			"source": "/(.*)",
			"destination": "/"
		}
	]
}
